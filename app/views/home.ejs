<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Content-Security-Policy" content="img-src 'self' data: https://lh3.googleusercontent.com https://www.google-analytics.com">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css"/>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="assets/js/chat.stream.js"></script>
  <link rel="stylesheet" href="assets/css/main.css">
</head>

<body>
  <div class="container-fluid p-0">
    <nav class="navbar navbar-light bg-dark">
      <div class="container d-flex align-items-center justify-content-between">
        <a class="navbar-brand" href="#">
          <img src="images/chatbot.png" alt="chatbot" width="30" height="30">
        </a>
        <% if (user) { %>
          <a href="/profile">
            <!-- <img src="<%= user.photo %>" alt="<%= user.name %>" width="30" height="30" style="border-radius: 50%;" crossorigin="anonymous"> -->
            <%= user.name %>
          </a>
        <% } else { %>
        <a href="/login">Login</a>
        <% } %>
      </div>
    </nav>

    <div class="d-flex">
      <div class="col-3 d-block" style="border-right: 1px solid #ccc;">
        <ul id="user-project" class="project">
          <li class="project-item">Project 1</li>
          <li class="project-item">Project 2</li>
          <li class="project-item">Project 3</li>
        </ul>
      </div>
      <div class="col-9 ps-3 d-flex flex-column justify-content-between" style="min-height: calc(100vh - 80px);">
        <div class="chat-view" id="chat-view" style="min-height: calc(100vh - 150px);"></div>
        <div class="d-flex gap-3 align-items-center">
          <form action="/users/upload" method="post" enctype="multipart/form-data" onchange="return this.submit();">
            <input type="file" name="field_file" id="field_file" class="" accept="text/plain">
          </form>
          <div class="col h-100">
            <div class="chat-input d-flex align-items-center gap-3 jusitfy-content-between position-relative">
              <textarea type="text" name="field_chat" id="field_chat" class="form-control" rows="1" style="resize: none;" placeholder="Ask me something..."></textarea>
              <button type="button" class="btn btn-link shadow-none" onclick="userChatStream()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill"
                  viewBox="0 0 16 16">
                  <path
                    d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
